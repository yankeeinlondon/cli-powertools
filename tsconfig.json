{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": [ "./src/*"]
    }
  },
  "include": [
    "src",
    "tests", 
    "scripts"
  ],
  "exclude": [
    "bin",
    "node_modules"
  ]
}
